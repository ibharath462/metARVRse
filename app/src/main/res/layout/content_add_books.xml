<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#90CAF9"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bharath.metarvrse.addBooks"
    tools:showIn="@layout/activity_add_books">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:id="@+id/ll"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ext"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#90CAF9"
            android:text="Enter the book details."
            android:gravity="center"
            android:textColor="#4A148C"
            android:textSize="30sp"
             />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:ems="10"
            android:id="@+id/name"
            app:met_floatingLabel="normal"
            android:layout_height="wrap_content"
            android:hint="Name"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:ems="10"
            android:id="@+id/author"
            android:layout_marginTop="20dp"
            app:met_floatingLabel="normal"
            android:layout_height="wrap_content"
            android:hint="Author"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:ems="10"
            android:id="@+id/isbn"
            android:layout_marginTop="20dp"
            app:met_floatingLabel="normal"
            android:layout_height="wrap_content"
            android:hint="ISBN"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose image!"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            fbutton:buttonColor="#EF5350"
            fbutton:shadowEnabled="true"
            android:layout_below="@+id/text2"
            android:layout_centerHorizontal="true" />

        <info.hoang8f.widget.FButton
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/fbutton_color_nephritis"
            fbutton:shadowEnabled="true"
            android:layout_below="@+id/text2"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</RelativeLayout>
